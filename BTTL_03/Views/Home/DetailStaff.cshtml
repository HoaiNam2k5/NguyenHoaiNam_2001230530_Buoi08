@model BTTL_03.Models.TBL_EMPLOYEE
@{
    ViewBag.Title = "Chi Tiết Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:90px;" class="container">
    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@Url.Content(Model.ImgFace)"
                     alt="@Model.Name"
                     class="img-fluid rounded mb-3"
                     style="max-height: 300px;" />
            </div>
            <div class="col-md-8">
                <h3 class="text-primary fw-bold mb-3">@Model.Name</h3>
                <p><strong>Mã Nhân Viên:</strong> @Model.Id</p>

                <p><strong>Giới tính:</strong> @Model.Gender</p>
                <p><strong>Thành Phố:</strong> @Model.City</p>
                <p><strong>Giới tính:</strong> @Model.Gender</p>
                <p><strong>Phòng Ban:</strong>@Model.Deptld</p>


                <div class="mt-4">
                    <a href="@Url.Action("DsNhanVien")" class="btn btn-secondary">
                        ← Quay lại danh sách
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>
