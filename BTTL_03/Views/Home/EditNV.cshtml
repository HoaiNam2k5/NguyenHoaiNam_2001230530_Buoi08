@model BTTL_03.Models.TBL_EMPLOYEE
@{
    ViewBag.Title = "Chỉnh sửa Nhân Viên";
}

<h2 class="text-center mb-4">Chỉnh sửa Nhân Viên</h2>

@using (Html.BeginForm("EditNV", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-group mb-3">
        <label>Họ và tên</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        <label>Giới tính</label>
        @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        <label>Thành phố</label>
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        <label>Mã phòng ban (DeptId)</label>
        @Html.TextBoxFor(m => m.Deptld, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        <label>Ảnh hiện tại</label><br />
        @if (!string.IsNullOrEmpty(Model.ImgFace))
        {
            <img src="@Url.Content(Model.ImgFace)" alt="Ảnh nhân viên" width="120" height="140" class="rounded shadow-sm mb-2" />
        }
        else
        {
            <p><em>Chưa có ảnh</em></p>
        }

        <br />
        <label>Chọn ảnh mới (nếu muốn đổi)</label>
        <input type="file" name="fileAnh" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="@Url.Action("DsNhanVien", "Home")" class="btn btn-secondary">Hủy</a>
}
