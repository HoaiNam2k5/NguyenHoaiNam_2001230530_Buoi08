@model BTM02.Models.Sach
@{
    ViewBag.Title = "Thêm Sách Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:90px;" class="container">
    <h2 class="text-primary fw-bold mb-4">Thêm Sách Mới</h2>

    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="card shadow p-4">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Tên Sách</label>
                    @Html.TextBoxFor(m => m.TenSach, new { @class = "form-control", placeholder = "Nhập tên sách..." })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Giá Bán</label>
                    @Html.TextBoxFor(m => m.GiaBan, new { @class = "form-control", placeholder = "Nhập giá bán..." })
                </div>

                <div class="col-md-12">
                    <label class="form-label fw-semibold">Mô Tả</label>
                    @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = 3, placeholder = "Mô tả sách..." })
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Số Lượng</label>
                    @Html.TextBoxFor(m => m.SoLuong, new { @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Mã Chủ Đề</label>
                    @Html.TextBoxFor(m => m.MaChuDe, new { @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Mã NXB</label>
                    @Html.TextBoxFor(m => m.MaNXB, new { @class = "form-control" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Ảnh Bìa</label>
                    <input type="file" name="fileAnh" class="form-control" accept="image/*" onchange="previewImage(event)" />
                    <div class="mt-2">
                        <img id="preview" src="#" alt="Xem trước ảnh" style="display:none; width:120px; border-radius:5px;" />
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <a href="@Url.Action("DsSach")" class="btn btn-secondary me-2">Quay lại</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu Sách
                </button>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            var output = document.getElementById('preview');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.style.display = 'block';
        }
    </script>
}
