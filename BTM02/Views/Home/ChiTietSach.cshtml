@model BTM02.Models.Sach
@{
    ViewBag.Title = "Chi Tiết Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:90px;" class="container">
    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@Url.Content(Model.AnhBia)"
                     alt="@Model.TenSach"
                     class="img-fluid rounded mb-3"
                     style="max-height: 300px;" />
            </div>
            <div class="col-md-8">
                <h3 class="text-primary fw-bold mb-3">@Model.TenSach</h3>
                <p><strong>Giá bán:</strong> @string.Format("{0:N0} đ", Model.GiaBan)</p>
                <p><strong>Mã chủ đề:</strong> @Model.MaChuDe</p>
                <p><strong>Mã NXB:</strong> @Model.MaNXB</p>
                <p><strong>Số lượng:</strong> @Model.SoLuong</p>
                <p><strong>Mô tả:</strong></p>
                <div class="bg-light p-3 rounded">@Model.MoTa</div>

                <div class="mt-4">
                    <a href="@Url.Action("DsSach")" class="btn btn-secondary">
                        ← Quay lại danh sách
                    </a>
                   
                </div>
            </div>
        </div>
    </div>
</div>
